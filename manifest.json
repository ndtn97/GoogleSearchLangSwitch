{
    "name": "Google Lang Switch",
    "description": "",
    "version": "0.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "/js/background.js"
    },
    "permissions": [
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "*://www.google.com/search*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://www.google.com/search*"
            ],
            "js": [
                "/js/page.js"
            ]
        }
    ],
    "action": {
        "default_icon": "/images/icon_off.png"
    }
}
